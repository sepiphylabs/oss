{
    "name": "sericode/oss",
    "description": "Create your own open-sourced software package easily.",
    "type": "library",
    "license": "MIT",
    "keywords": ["sepiphylabs", "sepiphy", "oss"],
    "homepage": "https://github.com/sericode/oss",
    "support": {
        "issues": "https://github.com/sericode/oss/issues",
        "source": "https://github.com/sericode/oss"
    },
    "authors": [
        {
            "name": "Quynh Xuan Nguyen",
            "email": "seriquynh@gmail.com",
            "homepage": "https://seriquynh.com",
            "role": "Software Developer"
        }
    ],
    "require": {
        "php": "^7.1.3",
        "sepiphy/phptools": "dev-master"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.2",
        "phpstan/phpstan": "^0.11.4",
        "phpunit/phpunit": "^8.0",
        "xuanquynh/php-codesniffer": "^1.1.3"
    },
    "autoload": {
        "psr-4": {
            "Sericode\\Oss\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Sericode\\Oss\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "XuanQuynh\\CodeSniffer\\ComposerScripts::postAutoloadDump"
        ],
        "fix": [
            "@php vendor/bin/php-cs-fixer fix",
            "@php vendor/bin/phpcbf src tests --standard=XuanQuynh"
        ],
        "test": [
            "@php vendor/bin/phpcs src tests --standard=XuanQuynh",
            "@php vendor/bin/phpstan analyse src --no-progress",
            "@php vendor/bin/phpunit"
        ]
    },
    "scripts-descriptions": {
        "fix": "Fix coding convention.",
        "test": "Test coding and unit."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "bin": ["bin/oss"],
    "config": {
        "sort-packages": true
    },
    "prefer-stable": true
}
